<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/home.css">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>

<body>
     <div class="home-page-main-wrapper">
        <div class="home-page-main-container shadow-[0_4px_10px_rgba(0,0,0,0.2)]">
            <%- include('./donor-includes/donor-navigation.ejs') %>
            <div class="home-page-right-panel-wrapper border-t flex flex-col justify-center items-center border-slate-100">
                <!-- Header -->
                <div class="home-page-main-content-header w-full p-8 h-full flex flex-row justify-between"> 
                    <div class="flex flex-col justify-start items-start gap-2">
                        <div class="text-slate-800 text-4xl font-medium">Linked Hospitals</div>
                        <div class="text-slate-500 text-2xl">Checkout the linked hospitals to this organisation for your future requirements!</div>
                    </div>
                    <div class="text-red-500">
                       <div class="bg-red-200 shadow-md w-20 h-20 rounded-full flex flex-col justify-center items-center text-2xl font-semibold"><%=bloodGroup%></div>
                    </div>
                </div>

                <!-- Content -->
                <div class="home-page-main-content-body w-full h-full p-8">
                    <div class="flex flex-col justify-start items-start gap-8 text-xl h-full">
                       <div class="bg-white shadow-[0_4px_10px_rgba(0,0,0,0.2)] rounded-lg p-8 text-lg w-full h-full overflow-auto">
                            <% if(linkedHospitals != null && Array.isArray(linkedHospitals) && linkedHospitals.length > 0) { %>
                                <h2 class="text-2xl font-semibold text-gray-700 mb-4">Linked hospital's details</h2>
                                <table class="min-w-full divide-y divide-gray-200 shadow-md rounded-lg overflow-hidden">
                                    <thead>
                                        <tr class="bg-slate-500 text-white">
                                            <th class="px-6 py-3 border-b text-left text-xl uppercase font-medium">Name</th>
                                            <th class="px-6 py-3 border-b text-left text-xl uppercase font-medium">Official Mail ID</th>
                                            <th class="px-6 py-3 border-b text-left text-xl uppercase font-medium">Mobile Number</th>
                                            <th class="px-6 py-3 border-b text-left text-xl uppercase font-medium">Address</th>
                                        </tr>
                                    </thead>
                                    <tbody class="bg-white divide-y divide-gray-200">
                                        <% linkedHospitals.forEach(request => { %>
                                            <tr>
                                                <td class="px-6 py-4 whitespace-nowrap text-gray-700 text-xl"><%= request.name %></td>
                                                <td class="px-6 py-4 whitespace-nowrap text-gray-700 text-xl"><%= request.email %></td>
                                                <td class="px-6 py-4 whitespace-nowrap text-center text-gray-700 text-xl"><%= request.mobileNo %></td>
                                                <td class="px-6 py-4 whitespace-nowrap text-gray-700 text-xl"><%= request.address %></td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            <% } else { %>
                                <div class="text-gray-500 text-left text-xl mt-4">
                                    <h2 class="text-xl font-semibold text-gray-700 mb-4">No hospital is linked yet.</h2>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
                <%- include('./donor-includes/donor-footer.ejs') %>
            </div>
        </div>
    </div>
    <script>
        function toggleView(view) {
            window.location.href = `/donor/my-requests?view=${view}`;
        }
    </script>
<%- include('../includes/end.ejs') %>