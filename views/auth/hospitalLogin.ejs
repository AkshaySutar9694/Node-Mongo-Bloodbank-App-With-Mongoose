<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/auth.css">
</head>

<body>
    <div class="login-page-main-wrapper">
        <div class="login-page-main-container shadow-[0_4px_10px_rgba(0,0,0,0.2)]">
             <%- include('./authCommonActions.ejs') %>
            <div class="right-panel-wrapper border-t flex flex-col justify-center items-center border-slate-100">
                <!-- Hospital Forms - Starting from here -->
                <div class="w-3/5 tcc-form-wrapper flex flex-col gap-8" id="hospitalForms">
                    <% if (errorMessage !== "") { %>
                        <p class="text-danger-accent-300 text-center"><%= errorMessage %></p>
                     <% } %>
                    <div class="text-center text-4xl font-normal">Login or signup as a Hospital Management Team</div>
                    <div class="flex flex-row justify-center items-center gap-2">
                        <button class="bg-slate-700 w-3/4 text-white px-4 py-2 rounded hover:bg-slate-500 focus:outline-none" id="hospitalLoginButton">Login</button>
                        <button class="bg-slate-700 w-3/4 text-white px-4 py-2 rounded hover:bg-slate-500 focus:outline-none" id="hospitalSignupButton">Signup</button>     
                    </div>
                    <div>
                        <form id="hospitalSignupForm" action="/hospital/signup" method="POST" class="flex flex-col gap-4 items-center">
                            <div class="w-full">
                                <label for="hospital-signup-name">Name:</label>
                                <input type="text" id="hospital-signup-name" name="hospital-signup-name" value="<%= oldInput.name %>" class="w-full px-4 py-2 border rounded-lg h-[38px] border-slate-500" />
                                <span id="hospital-signup-nameError" class="error"></span><br>
                            </div>
                            
                            <div class="w-full">
                                <label for="hospital-signup-email">Hospital's Official Email Id:</label>
                                <input type="email" id="hospital-signup-email" name="hospital-signup-email" value="<%= oldInput.email %>" class="w-full px-4 py-2 border rounded-lg h-[38px] border-slate-500" />
                                <span id="hospital-signup-emailError" class="error"></span><br>
                            </div>

                            <div class="w-full">
                                <label for="hospital-signup-mobile">Contact Number:</label>
                                <input type="text" id="hospital-signup-mobile" name="hospital-signup-mobile" value="<%= oldInput.mobileNo %>" class="w-full px-4 py-2 border rounded-lg h-[38px] border-slate-500" />
                                <span id="hospital-signup-mobileError" class="error"></span><br>
                            </div>

                            <div class="w-full">
                                <label for="hospital-signup-address">Address:</label>
                                <textarea rows="5" id="hospital-signup-address" name="hospital-signup-address" value="<%= oldInput.address %>" min="18" max="65" class="w-full px-4 py-2 border rounded-lg border-slate-500"></textarea>
                                <span id="hospital-signup-addressError" class="error"></span><br>
                            </div>

                            <div class="w-full">
                                <label for="hospital-signup-password">Password:</label>
                                <input type="password" id="hospital-signup-password" name="hospital-signup-password" value="<%= oldInput.password %>" class="w-full px-4 py-2 border rounded-lg h-[38px] border-slate-500" />
                                <span id="hospital-signup-passwordError" class="error"></span><br>
                            </div>
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <button class="bg-slate-700 text-white px-4 py-2 rounded hover:bg-slate-500 focus:outline-none text-base w-1/2" type="submit">Submit</button>
                        </form>
                        <form id="hospitalSigninForm" action="/hospital/signin" method="POST" class="flex flex-col gap-4 items-center">
                            <div class="w-full">
                                <label for="hospital-signin-email">Hospital's Official Email Id:</label>
                                <input type="email" id="hospital-signin-email" name="hospital-signin-email" value="<%= oldInput.email %>"  class="w-full px-4 py-2 border rounded-lg h-[38px] border-slate-500" />
                                <span id="hospital-signin-emailError" class="error"></span><br>
                            </div>

                            <div class="w-full">
                                <label for="hospital-signin-password">Password:</label>
                                <input type="password" id="hospital-signin-password" name="hospital-signin-password" value="<%= oldInput.password %>"  class="w-full px-4 py-2 border rounded-lg h-[38px] border-slate-500" />
                                <span id="hospital-signin-passwordError" class="error"></span><br>
                            </div>
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <button class="bg-slate-700 text-white px-4 py-2 rounded hover:bg-slate-500 focus:outline-none text-base w-1/2" type="submit">Submit</button>
                        </form>
                    </div>
                </div>
                <!-- Hospital Forms - Ending here -->
            </div>     
        <div>
    </div>
    <script src="/js/hospitalAuthScript.js"></script>
<%- include('../includes/end.ejs') %>